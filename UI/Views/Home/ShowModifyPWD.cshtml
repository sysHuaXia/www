@{
    Layout = null;
    ViewBag.Title = "ShowModifyPWD";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/sweet-alert.css">
    <link href="/css/bootstrap.min.css?v=3.4.0" rel="stylesheet">
    <link href="/css/font-awesome.css?v=4.3.0" rel="stylesheet">
    <link href="/css/plugins/footable/footable.core.css" rel="stylesheet">
    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/style.css?v=3.0.0" rel="stylesheet">
    <link href="/ShareCss/productShow.css" rel="stylesheet" type="text/css" />
    <link href="/images/jquery-webox.css" rel="stylesheet" type="text/css">
    <link href="/ShareCss/product.css" rel="stylesheet" type="text/css" />
    <link href="/ShareCss/productShow.css" rel="stylesheet" type="text/css" />
    <script>
        function chk() {
            with (document.form1) {
                if (yPwd.value == '') {
                    swal('错误...', '原密码不允许为空！', 'error');
                } else if (xPwd.value == '') {
                    swal('错误...', '新密码不允许为空！', 'error');
                } else if (cPwd.value == '') {
                    swal('错误...', '重复密码不允许为空！', 'error');
                } else if (xPwd.value != cPwd.value) {
                    swal('错误...', '新密码与重复密码不匹配！', 'error');
                } else {
                    $.ajax({
                        type: "POST",
                        url: "/Home/ModifyPWD",
                        data: $("#form1").serialize(),
                        success: function (sesponseTest) {
                            if (sesponseTest == "0") {
                                swal('错误...', '新密码与重复密码不匹配！', 'error');
                            } else if (sesponseTest == "2") {
                                swal('错误...', '原密码错误！', 'error');
                            } else {
                                swal({
                                    title: "操作成功...",
                                    text: "密码修改成功！跳转登录页面重新登录！",
                                    type: "success",
                                    showCancelButton: false,
                                    confirmButtonText: "OK",
                                }, function () {
                                    parent.Dc1();
                                });
                            }
                        }
                    });
                }
            }
        }
    </script>
</head>
<body>
    <form name="form1" id="form1" action="">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-sm-7">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <table width="100%" class="pro_table" border="0" cellpadding="0" cellspacing="0">
                                <tr>
                                    <td width="87" class="pro_color2" height="50">用户：</td>
                                    <td height="50">@ViewBag.UserName</td>
                                </tr>
                                <tr>
                                    <td width="87" class="pro_color2" height="50">原密码：</td>
                                    <td height="50"><input class="form-control" type="password" name="yPwd" /></td>
                                </tr>
                                <tr>
                                    <td width="87" class="pro_color2" height="50">新密码：</td>
                                    <td height="50"><input class="form-control" type="password" name="xPwd" /></td>
                                </tr>
                                <tr>
                                    <td width="87" class="pro_color2" height="50">重复密码：</td>
                                    <td height="50"><input class="form-control" type="password" name="cPwd" /></td>
                                </tr>
                                <tr>
                                    <td colspan="2" height="50">
                                        <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="button" onclick="chk()">
                                            <strong>确定</strong>
                                        </button>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <!-- 全局js -->
    <script src="/js/jquery-2.1.1.min.js"></script>
    <script src="/js/bootstrap.min.js?v=3.4.0"></script>
    <script src="/js/plugins/footable/footable.all.min.js"></script>
    <script src="/js/sweet-alert.js"></script>
    <script src="/AdminJsCss/DatePicker/WdatePicker.js" type="text/javascript"></script>
    <script src="/js/jquery-webox.js"></script>

    <!-- 自定义js -->
    <script src="/js/content.js?v=1.0.0"></script>
    <script>
                $(document).ready(function () {

                    $('.footable').footable();
                    $('.footable2').footable();

                });

    </script>
</body>
</html>